@{
    ViewData["Title"] = "Bringing a slice of happiness to your doorstep";
    Layout = null;
}

<html data-theme="forest">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/img/hero-slice.png" type="image/x-icon" />
    <link href="https://cdn.jsdelivr.net/npm/daisyui@2.51.6/dist/full.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2/dist/tailwind.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <div class="navbar max-w-screen-xl mx-auto mt-5">
            <div class="navbar-start">
                <div class="dropdown">
                    <label tabindex="0" class="btn btn-ghost btn-circle">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" /></svg>
                    </label>
                    <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52">
                        <li><a>Pizza</a></li>
                        <li><a>Beverages</a></li>
                        <li><a>About Us</a></li>
                    </ul>
                </div>
            </div>
            <!-- Logo -->            
            <div class="navbar-center">
                <a asp-controller="Home">
                    <img src="/img/logo.png" />
                </a>
            </div>
            <div class="navbar-end">
                <!-- Notifactions -->
                <button class="btn btn-ghost btn-circle">
                    <div class="indicator">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                        </svg>
                        <span class="badge badge-xs badge-primary indicator-item"></span>
                    </div>
                </button>
                <!-- Cart -->
                <div class="flex-none">
                    <div class="dropdown dropdown-end">
                        <label tabindex="0" class="btn btn-ghost btn-circle">
                            <span class="indicator">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" /></svg>
                                <span class="badge badge-sm indicator-item">6</span>
                            </span>
                        </label>
                        <div tabindex="0" class="mt-3 card card-compact dropdown-content w-52 bg-base-100 shadow">
                            <div class="card-body">
                                <span class="font-bold text-lg">6 Items</span>
                                <span class="text-info">Subtotal: $65.12</span>
                                <div class="card-actions">
                                    <button class="btn btn-primary btn-block">View cart</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main>
        <!-- Jumbotron -->
        <div class="hero">
            <div class="hero-content flex-col lg:flex-row-reverse">
                <img src="/img/hero-slice.png" class="max-w-md" />
                <div>
                    <h1 class="text-5xl font-bold">Satisfy Your Cravings with our Delicious Pizza!</h1>
                    <p class="py-6 w-4/5 text-lg">Whether you prefer classic toppings like pepperoni or you're feeling adventurous with our gourmet options, we've got you covered. Sit back, relax, and enjoy the aroma of our delicious pizzas right from the comfort of your home. Order now and experience a slice of heaven with every bite.</p>
                    <button class="btn btn-primary">Order Now</button>
                </div>
            </div>
        </div>
            <!-- Menu Section -->
        <div class="max-w-screen-xl mx-auto">
            <h1 class="font-bold text-6xl text-center">Menu</h1>

            <!-- Listings -->
            <div class="grid-cols-3	grid">
            <!-- Listing #1 -->
                <div class="card w-96 bg-base-100 shadow-xl">
                    <figure><img src="/img/Chicken Alfredo Pizza.png" /></figure>
                    <div class="card-body">
                        <h2 class="card-title">
                            Chicken Alfredo Pizza
                            <div class="badge badge-secondary">NEW</div>
                        </h2>
                        <p> Alfredo sauce, cooked chicken, sliced mushrooms, mozzarella cheese, and fresh parsley</p>
                        <div class="card-actions items-center justify-between">
                            <span class="font-bold text-2xl">$13.10</span>
                            <button class="btn btn-primary ">Order Now</button>
                        </div>
                    </div>
                </div>

            <!-- Listing #2 -->
            <div class="card w-96 bg-base-100 shadow-xl">
                <figure><img src="/img/Funghi.png" /></figure>
                <div class="card-body">
                    <h2 class="card-title">
                        Mushroom Pizza
                    </h2>
                    <p>Tomato sauce, mozzarella cheese, Italian sausage, sliced mushrooms, and fresh oregano</p>
                    <div class="card-actions items-center justify-between">
                        <span class="font-bold text-2xl">$10.24</span>
                        <button class="btn btn-primary ">Order Now</button>
                    </div>
                </div>
            </div>

            <!-- Listing #3 -->
            <div class="card w-96 bg-base-100 shadow-xl">
                <figure><img src="/img/Ham.png" /></figure>
                <div class="card-body">
                    <h2 class="card-title">
                        Ham Pizza
                    </h2>
                    <p>Pepperoni Pizza: Tomato sauce, mozzarella cheese, sliced ham, and oregano.</p>
                    <div class="card-actions items-center justify-between">
                        <span class="font-bold text-2xl">$12.14</span>
                        <button class="btn btn-primary ">Order Now</button>
                    </div>
                </div>
            </div>

            <!-- Listing #4 -->
            <div class="card w-96 bg-base-100 shadow-xl">
                <figure><img src="/img/MargheritaPizza.png" /></figure>
                <div class="card-body">
                    <h2 class="card-title">
                        Margherita Pizza
                    </h2>
                    <p>San Marzano tomatoes, fresh mozzarella cheese, fresh basil leaves, extra-virgin olive oil, and salt</p>
                    <div class="card-actions items-center justify-between">
                        <span class="font-bold text-2xl">$9.64</span>
                        <button class="btn btn-primary ">Order Now</button>
                    </div>
                </div>
            </div>

            <!-- Listing #5 -->
            <div class="card w-96 bg-base-100 shadow-xl">
                <figure><img src="/img/Meat.png" /></figure>
                <div class="card-body">
                    <h2 class="card-title">
                        Meat Lovers Pizza
                        <div class="badge badge-secondary">NEW</div>
                    </h2>
                    <p>Tomato sauce, mozzarella cheese, Italian sausage, bacon, pepperoni, and ham</p>
                    <div class="card-actions items-center justify-between">
                        <span class="font-bold text-2xl">$14.87</span>
                        <button class="btn btn-primary ">Order Now</button>
                    </div>
                </div>
            </div>

            <!-- Listing #6 -->
            <div class="card w-96 bg-base-100 shadow-xl">
                <figure><img src="/img/Pesto.png" /></figure>
                <div class="card-body">
                    <h2 class="card-title">
                        Pesto Pizza
                        <div class="badge badge-secondary">NEW</div>
                    </h2>
                    <p>Pesto sauce, sliced tomatoes, mozzarella cheese, and sliced black olives</p>
                    <div class="card-actions items-center justify-between">
                        <span class="font-bold text-2xl">$11.24</span>
                        <button class="btn btn-primary ">Order Now</button>
                    </div>
                </div>
            </div>

            <!-- Listing #7 -->
            <div class="card w-96 bg-base-100 shadow-xl">
                <figure><img src="/img/Tuna.png" /></figure>
                <div class="card-body">
                    <h2 class="card-title">
                        Tuna Pizza
                    </h2>
                    <p>Olive oil, mozzarella cheese, ricotta cheese, garlic, and fresh parsley and tuna</p>
                    <div class="card-actions items-center justify-between">
                        <span class="font-bold text-2xl">$10.64</span>
                        <button class="btn btn-primary ">Order Now</button>
                    </div>
                </div>
            </div>

            <!-- Listing #8 -->
            <div class="card w-96 bg-base-100 shadow-xl">
                <figure><img src="/img/Veggie Pizza.png" /></figure>
                <div class="card-body">
                    <h2 class="card-title">
                        Veggie Pizza                        
                    </h2>
                    <p>Tomato sauce, mozzarella cheese, green bell pepper, red onion, sliced mushrooms, and sliced black olives</p>
                    <div class="card-actions items-center justify-between">
                        <span class="font-bold text-2xl">$12.14</span>
                        <button class="btn btn-primary ">Order Now</button>
                    </div>
                </div>
            </div>

                <!-- Listing #9 -->
                <div class="card w-96 bg-base-100 shadow-xl">
                    <figure><img src="/img/BuffaloChickenPizza.png" /></figure>
                    <div class="card-body">
                        <h2 class="card-title">
                            Buffalo Chicken Pizza
                            <div class="badge badge-secondary">NEW</div>
                        </h2>
                        <p>Buffalo sauce, cooked chicken, blue cheese, mozzarella cheese, and sliced celery</p>
                        <div class="card-actions items-center justify-between">
                            <span class="font-bold text-2xl">$13.44</span>
                            <button class="btn btn-primary ">Order Now</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer Section -->
        <footer class="footer footer-center p-10 bg-base-200 text-base-content rounded">
            <div class="grid grid-flow-col gap-4">
                <a class="link link-hover">About us</a>
                <a class="link link-hover">Contact</a>
                <a class="link link-hover">Jobs</a>
                <a class="link link-hover">Press kit</a>
            </div>
            <div>
                <div class="grid grid-flow-col gap-4">
                    <a><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"></path></svg></a>
                    <a><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"></path></svg></a>
                    <a><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current"><path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"></path></svg></a>
                </div>
            </div>
            <div>
                <p>Copyright © 2023 - All right reserved by Igor Slivca LLC</p>
            </div>
        </footer>
    </main>
</body>
</html>

